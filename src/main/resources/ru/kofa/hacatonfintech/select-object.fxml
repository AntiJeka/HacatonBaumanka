<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.kofa.hacatonfintech.controller.SelectController"
      spacing="30.0"
      style="-fx-padding: 40; -fx-background-color: #2c3e50;"
      prefHeight="800" prefWidth="1200">

    <!-- Заголовок и управление -->
    <VBox spacing="20">
        <Label text="ВЫБОР ОБЪЕКТА"
               style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1; -fx-font-family: 'Arial';" />
        <Separator prefWidth="1100" style="-fx-background-color: #34495e;"/>

        <HBox alignment="CENTER_LEFT" spacing="30">
            <Label fx:id="countLabel"
                   text="Найдено объектов: 0"
                   style="-fx-text-fill: #bdc3c7; -fx-font-size: 20px; -fx-font-weight: bold; -fx-font-family: 'Arial';" />
            <Button text="ОБНОВИТЬ"
                    onAction="#handleRefreshButton"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 12 25; -fx-cursor: hand; -fx-font-size: 16px; -fx-font-family: 'Arial';" />
        </HBox>
    </VBox>

    <!-- Основной контент -->
    <VBox spacing="20" style="-fx-background-color: #34495e; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #7f8c8d; -fx-border-width: 2; -fx-border-radius: 12;"
          VBox.vgrow="ALWAYS">

        <!-- Заголовки таблицы -->
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-border-radius: 8;">
            <Label text="ОБЪЕКТ"
                   style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 20px; -fx-pref-width: 600; -fx-font-family: 'Arial';"/>
            <Label text="ЯЧЕЙКА"
                   style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 20px; -fx-pref-width: 300; -fx-font-family: 'Arial';"/>
            <Label text="ДЕЙСТВИЯ"
                   style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 20px; -fx-pref-width: 200; -fx-font-family: 'Arial';"/>
        </HBox>

        <!-- Список объектов -->
        <ListView fx:id="objectsListView"
                  style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 16px;"
                  VBox.vgrow="ALWAYS">
        </ListView>

    </VBox>

    <!-- Нижняя панель -->
    <HBox alignment="CENTER_RIGHT" spacing="20">
        <Label text="СКЛАД • Система управления объектами"
               style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px; -fx-font-family: 'Arial';"
               HBox.hgrow="ALWAYS"/>
        <Button text="НАЗАД"
                onAction="#handleBackButton"
                style="-fx-pref-width: 150px; -fx-pref-height: 55px; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 6; -fx-border-radius: 6; -fx-cursor: hand; -fx-font-family: 'Arial';" />
    </HBox>

</VBox>